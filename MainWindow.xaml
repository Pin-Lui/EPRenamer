<Window x:Class="EPRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="178" Width="341"
        Style="{DynamicResource CustomWindowStyle}">

    <Grid x:Name="MainViewGrid" Margin="0,0,-2,2">
        
        <Button x:Name="Btn_Search" 
                Content="Search" 
                HorizontalAlignment="Left" 
                Margin="253,12,0,0" 
                VerticalAlignment="Top" 
                Click="Btn_Search_Click"
                Height="23"
                Width="80"/>

        <Button x:Name="Btn_GenSeasonEPNameList"
                Content="Get Season EP Names" 
                HorizontalAlignment="Left" 
                Margin="114,68,0,0" 
                VerticalAlignment="Top" 
                Click="Btn_GenSeasonEPNameList_Click" 
                Height="23" 
                Width="134"
                Foreground="Blue"/>

        <Button x:Name="Btn_RenameFilesWithList" 
                Content="Rename Files" 
                HorizontalAlignment="Left" 
                Margin="253,68,0,0" 
                VerticalAlignment="Top" 
                Click="Btn_RenameFilesWithList_Click" 
                Height="23" 
                Width="80"/>

        <Button x:Name="Btn_SelectShow" 
                Content="Select" 
                HorizontalAlignment="Left" 
                Margin="253,40,0,0" 
                VerticalAlignment="Top" 
                Click="Btn_SelectShow_Click"
                Height="23"
                Width="80"/>
        
        <ComboBox x:Name="CmB_SelectShow" 
                  HorizontalAlignment="Left" 
                  Margin="5,40,0,0" 
                  VerticalAlignment="Top" 
                  Width="243" 
                  DropDownClosed="CmB_SelectShow_DropDownClosed"
                  Height="23" 
                  FontSize="14"/>

        <ComboBox x:Name="CmB_SelectSeason" 
                  HorizontalAlignment="Left" 
                  Margin="5,68,0,0" 
                  VerticalAlignment="Top" 
                  Width="104" 
                  Height="23" 
                  FontSize="14"/>

        <TextBox x:Name="TxB_SeriesSearch" 
                 HorizontalAlignment="Left" 
                 Margin="5,12,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="243" 
                 GotMouseCapture="TxB_SeriesSearch_GotMouseCapture" 
                 Height="23" 
                 FontSize="14"
                 TextChanged="TxB_SeriesSearch_TextChanged"/>

        <TextBox x:Name="TxB_FileExtension" 
                 HorizontalAlignment="Left" 
                 Margin="5,96,0,0" 
                 TextWrapping="Wrap" 
                 Text="mkv"
                 MaxLength="3"
                 VerticalAlignment="Top" 
                 Width="37"
                 Height="23" 
                 FontSize="14"
                 TextChanged="TxB_FileExtension_TextChanged"/>

        <Label x:Name="Lbl_Cout" 
               Margin="47,92,0,0" 
               VerticalAlignment="Top"
               MouseDoubleClick="Lbl_Cout_MouseDoubleClick" 
               Height="31" 
               FontSize="14"
               VerticalContentAlignment="Center" 
               HorizontalContentAlignment="Center"
               Panel.ZIndex="1" 
               HorizontalAlignment="Left" 
               Width="282"/>

        <ProgressBar x:Name="PgB_Main" 
                     HorizontalAlignment="Left" 
                     Height="14" 
                     Margin="5,125,0,0" 
                     VerticalAlignment="Top" 
                     Width="328"
                     Foreground="Purple"/>

        <Rectangle HorizontalAlignment="Left" 
                   Margin="47,94,0,0" 
                   Stroke="#FF252424" 
                   VerticalAlignment="Top" 
                   Width="286"
                   Height="23">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF313131" Offset="0.14"/>
                    <GradientStop Color="#FF252424" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>      

    </Grid>
</Window>
